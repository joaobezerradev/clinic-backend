{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ES2020",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "outDir": "./dist",
    "paths": {
      "@domain/*": [
        "domain/*"
      ],
      "@application/*": [
        "application/*"
      ],
      "@infra/*": [
        "infra/*"
      ]
    },
    "useUnknownInCatchVariables": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
